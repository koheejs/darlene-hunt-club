extends ./pages/layout/_layout.jade

mixin chevronIcon
  img(src="./assets/images/icon-chevron-down.png", alt="")

mixin accordion(title)
  .accordion(data-accordion) 
    .accordion-title 
      h4= title
      .icon
        +chevronIcon
    .accordion-content
      .content
        block

