extends ./pages/layout/_layout.jade

mixin chevronIcon
  img(src="./assets/images/icon-chevron-down.png" alt="")

mixin accordion(title)
  .accordion(data-accordion) 
    .accordion-title 
      h4= title
      .icon
        +chevronIcon
    .accordion-content
      .content
        block

block variables
  - var bodyClass = "home-page"

block content
  //- Section Hero
  section#hero(data-scroll-section)
    .container 
      h1.section-title
        em LEVEL UP 
        | YOUR BUSINESS AND SHOWCASE IT TO 
        em THE WORLD
      p.section-description We deliver all the content you need to supercharge your marketing.

  //- Section Who We Are
  section#who-we-are(data-scroll-section)
    .container
      .section-tag WHO WE ARE
      h2.section-title WE ARE A 
        em CREATIVE 
        br
        em PRODUCTION 
        | STUDIO

      .row 
        .col
          p.text-body-sm We are a multidisciplinary team  of producers, designers, strategists, developers, and artists. 
        .col 
          p.text-body-sm We partner with visionaries, founders, and c-suite teams focused on propelling their business forward.  

  //- Section Our Services
  section#our-services(data-scroll-section)
    .container
      .section-tag OUR SERVICES
      .row
        h2.section-title 
          span.line
            span.fix Brand &amp; Identity 
            span.text Brand &amp; Identity 
          span.line
            span.fix Marketing Strategy 
            span.text Marketing Strategy 
          span.line
            span.fix Content Creation
            span.text Content Creation
          span.line
            span.fix Design
            span.text Design
          span.line
            span.fix Full Stack Development
            span.text Full Stack Development
          span.line
            span.fix Copywriting
            span.text Copywriting
          span.line
            span.fix Motion Graphics
            span.text Motion Graphics
          span.line
            span.fix Videography
            span.text Videography
          span.line
            span.fix &amp; Photography 
            span.text &amp; Photography 

  //- Section Our Process
  section#our-process(data-scroll-section)
    .sticky-wrapper(data-scroll data-scroll-sticky data-scroll-id="our-process" data-scroll-target="#our-process")
      .container
        .section-tag OUR PROCESS

      .processes-wrapper
        ul.processes(data-scroll) 
          li.step 
            .step-number 01
            .step-content 
              h4.step-title Discovery
              p.text-body-sm Book an appointment to discuss your business needs and goals.
              a.cta.cta-green(href="https://calendly.com/huntclubstudio" target="_blank") SCHEDULE A CALL
          li.step 
            .step-number 02
            .step-content 
              h4.step-title Deep Dive
              p.text-body-sm We learn about your business inside out to create a customized marketing plan.
          li.step 
            .step-number 03
            .step-content 
              h4.step-title Execute
              p.text-body-sm We execute the plan with room for revisions. You can be as involved as you like; we value collaboration but are also adept at independently creating assets that fit your needs.
          li.step
            .step-number 04
            .step-content 
              h4.step-title Deliver
              p.text-body-sm Receive all the assets you need to make your business shine and turbo boost your marketing plan.
          li.step 
            .step-number ++
            .step-content 
              h4.step-title What’s Next?
              p.text-body-sm Need help managing your new assets? Our team offers social and marketing management services to ensure ongoing success.

  //- Section Our Location
  section#our-location(data-scroll-section)
    .container 
      .section-tag WE ARE BASED OUT OF
      .content.row
        h2.section-title toronto,
          em SàiGòn 
          | &amp; 
          span outerspace

        .description
          p.text-body-sm Yes, the time difference means we work around the clock. Yes, we can get that job you needed done last week, 
            strong pronto!
          a.cta.cta-green(href="https://calendly.com/huntclubstudio" target="_blank") LET’S TALK

  include ./sections/_case_studies.jade

  include ./sections/_contact-form.jade
