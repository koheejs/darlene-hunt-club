extends ./pages/layout/_layout.jade

mixin chevronIcon
  img(src="./assets/images/icon-chevron-down.png" alt="")

mixin partners 
  - list = ['logo-shopley', 'logo-flairairlines', 'logo-newspark', 'logo-desjardins', 'logo-ocad', 'logo-gocxm', 'logo-ibogaine', 'logo-manulife', 'logo-sap', 'logo-twb']
  each partner in list
    .partner
      img(src='./assets/images/' + partner + '.png' alt="") 

block variables
  - var bodyClass = "about-us-page"

block content
  section#about-hero
    .container 
      .content-wrapper
        .col
          .logo
            img(src="./assets/images/logo.png" alt="hunt-club")
          p.text-body-sm Traditional agencies are costly, and managing freelancers is often chaotic. We offer a streamlined, efficient solution to keep your vision on track.

          a.cta LET'S TALK

        .intro
          h2.section-title
            strong We are a 
            br 
            span Close-Knit, 
            br 
            strong Well Oiled,
            br 
            span Multi-Dimensional,
            br 
            strong Female-Led,
            br 
            span Pizza Loving,
            br 
            strong Future Forward,
            br 
            span Results Oriented,
            br 
            strong Creative Machine.


  section#partners
    .container 
      .partner-list 
        +partners

      .partner-marquee-container
        .marquee.marquee-part-1
          +partners
        //- .marquee.marquee-part-2
        //-   +partners
        //- .marquee.marquee-part-3
        //-   +partners
        //- .marquee.marquee-part-4
        //-   +partners

  section#problem-solved
    .container 
      h2.section-title 
        em PROBLEMS, 
        | SOLVED. 
      p.text-body-sm  We bring an artful eye and pragmatic approach  to every project and  believe there is no concept too complex or grandiose that we can’t find a solution for.


  section#key-words
    .container 
      p.intro With over 10 years of working together, we have worked on a myriad of projects in these worlds:

      .key-words 
        - list = ["Tech", "Art &Film", "Finance", "Non-Profit", "Animation", "Mergers & Acquisitions", "B2B", "B2C", "Fashion", "Startup", "VFX", "SaaS", "Crypto", "Data"]
        each word in list
          .word= word 


  //- Section Our Location
  section#our-location
    .container 
      .section-tag WE ARE BASED OUT OF
      .content.row
        h2.section-title toronto,
          em SàiGòn 
          | &amp; 
          span outerspace

        .description
          p.text-body-sm Yes, the time difference means we work around the clock. Yes, we can get that job you needed done last week, 
            strong pronto!
          a.cta LET’S TALK

  //- Section Case Studies
  section#case-studies 
    .container
      .section-tag CASE STUDIES
      ul.case-studies
        li 
          .brand
            img(src="./assets/images/home-cs-1.png" alt="Case Study 1")
        li 
          .brand
            img(src="./assets/images/home-cs-2.png" alt="Case Study 2")
        li
          .brand
            img(src="./assets/images/home-cs-3.png" alt="Case Study 3")
        li
          .brand
            img(src="./assets/images/home-cs-4.png" alt="Case Study 4")
        li 
          .brand
            img(src="./assets/images/home-cs-5.png" alt="Case Study 5")
        li 
          .brand
            img(src="./assets/images/home-cs-6.png" alt="Case Study 6")

  include ./pages/contact-form.jade



